<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.halbaptheapp.WelcomeActivity"
    android:background="@drawable/whitebluebg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ExplanationText"
        android:text="@string/ExplanationText"
        android:layout_below="@+id/AppDescriptionLarge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PlayButton"
        android:id="@+id/button"
        android:background="#3373a5"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:onClick="startMainGameScreen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />
        -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/AppDescriptionLarge"
        android:id="@+id/AppDescriptionLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
    <!-- Image source: http://tabpos.mobi/images/playbutton.png-->
    <ImageButton
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/PlayButton"
        android:src="@drawable/playb2"
        android:background="@android:color/transparent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/ExplanationText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="startMainGameScreen"/>

</RelativeLayout>
