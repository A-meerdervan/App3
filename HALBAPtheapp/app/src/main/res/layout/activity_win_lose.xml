<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.halbaptheapp.WinLoseActivity"
    android:background="@drawable/bloodspat"
    android:id="@+id/RelaLayoutWinLose">
    <!--Image source: s1057.photobucket.com/user/fapito/media/Rageface.png.html-->

    <ImageView
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:id="@+id/ImageWinLose"
        android:src="@drawable/rageface"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0087ff"
        android:id="@+id/WinLose"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/WinLoseSmall"
        android:layout_below="@+id/WinLose"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="#0087ff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PlayAgainButton"
        android:text="@string/PLayAgainButton"
        android:background="#acde1307"
        android:layout_below="@+id/WinLoseSmall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="playAgain"
        android:textColor="#d4d4d4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Word was: Default Word"
        android:id="@+id/ShowTheWord"
        android:layout_below="@+id/PlayAgainButton"
        android:layout_centerHorizontal="true"
        android:textColor="#0087ff"
        android:textIsSelectable="true"
        android:textSize="25sp" />

</RelativeLayout>
